{
  "name": "londoncss-website",
  "description": "London CSS",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": "git@github.com:LondonCSS/website.git",
  "author": "Oliver Turner <oliver.turner@codedsignal.co.uk>",
  "homepage": "https://www.londoncss.dev",
  "bugs": "https://github.com/LondonCSS/website/issues",
  "keywords": [
    "London CSS",
    "website",
    "eleventy",
    "css"
  ],
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@11ty/eleventy": "github:slightlyoff/eleventy#njk-cache",
    "@11ty/eleventy-plugin-rss": "1.0.9",
    "critical": "2.0.6",
    "cssnano": "4.1.10",
    "cssnano-preset-advanced": "4.0.7",
    "date-fns": "2.16.1",
    "eleventy-plugin-toc": "1.1.0",
    "markdown-it": "12.0.2",
    "markdown-it-anchor": "6.0.1",
    "mkdirp": "1.0.4",
    "npm-run-all": "4.1.5",
    "postcss": "8.1.9",
    "postcss-cli": "8.3.0",
    "postcss-import": "13.0.0",
    "postcss-inset": "1.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-pseudo-class-enter": "5.0.0",
    "puppeteer": "5.5.0",
    "sass": "1.29.0",
    "serve-handler": "6.1.3",
    "sharp": "0.26.3"
  },
  "devDependencies": {
    "eslint": "7.14.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "stylelint": "13.8.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-selector-bem-pattern": "2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js --fix"
    ],
    "*.css": [
      "yarn lint:css"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint:css": "stylelint ./styles ./src/scss --config ./tools/.stylelintrc",
    "lint:js": "eslint ./src --config ./tools/.eslintrc",
    "lint": "run-s lint:*",
    "start": "run-s clean && eleventy --serve",
    "serve": "serve ./dist",
    "build:site": "eleventy",
    "build:wallpapers": "node ./tools/screenshot-wallpapers.js",
    "build:eventcards": "node ./tools/screenshot-events.js",
    "build": "NODE_ENV=production run-s clean build:*"
  }
}
