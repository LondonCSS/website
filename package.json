{
  "name": "londoncss-website",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": "git@github.com:LondonCSS/website.git",
  "author": "Oliver Turner <oliver.turner@codedsignal.co.uk>",
  "homepage": "https://www.londoncss.dev/",
  "bugs": "https://github.com/LondonCSS/website/issues",
  "keywords": [
    "London CSS",
    "website",
    "eleventy",
    "css"
  ],
  "main": "index.js",
  "dependencies": {
    "@11ty/eleventy": "0.7.1",
    "clean-css": "4.2.1",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.14",
    "postcss-clean": "1.1.0",
    "postcss-cli": "6.1.2",
    "postcss-import": "12.0.1",
    "postcss-preset-env": "6.6.0"
  },
  "devDependencies": {
    "stylelint": "9.10.1",
    "stylelint-config-recommended": "2.1.0"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:css": "yarn run css",
    "build:site": "eleventy",
    "css": "postcss ./styles/*.css --dir ./dist/styles",
    "dev": "run-p dev:*",
    "dev:css": "yarn run css -w",
    "dev:serve": "eleventy --serve",
    "lint:css": "stylelint ./styles --config ./tools/.stylelintrc"
  }
}
