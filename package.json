{
  "name": "londoncss-website",
  "description": "London CSS",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": "git@github.com:LondonCSS/website.git",
  "author": "Oliver Turner <oliver.turner@codedsignal.co.uk>",
  "homepage": "https://www.londoncss.dev",
  "bugs": "https://github.com/LondonCSS/website/issues",
  "keywords": [
    "London CSS",
    "website",
    "eleventy",
    "css"
  ],
  "main": "index.js",
  "dependencies": {
    "@11ty/eleventy": "0.8.3",
    "@11ty/eleventy-plugin-rss": "1.0.6",
    "clean-css": "4.2.1",
    "date-fns": "1.30.1",
    "eleventy-plugin-toc": "1.0.1",
    "markdown-it": "9.0.1",
    "markdown-it-anchor": "5.2.4",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.17",
    "postcss-clean": "1.1.0",
    "postcss-cli": "6.1.3",
    "postcss-import": "12.0.1",
    "postcss-inset": "1.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-pseudo-class-enter": "5.0.0",
    "puppeteer": "1.19.0",
    "serve-handler": "6.1.0",
    "sharp": "0.23.0",
    "workbox-cli": "4.3.1"
  },
  "devDependencies": {
    "cypress": "3.4.1",
    "eslint": "6.1.0",
    "eslint-plugin-cypress": "2.6.1",
    "husky": "3.0.2",
    "lighthouse": "5.2.0",
    "lint-staged": "9.2.1",
    "serve": "11.1.0",
    "start-server-and-test": "1.9.2",
    "stylelint": "10.1.0",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-selector-bem-pattern": "2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js --fix",
      "git add"
    ],
    "*.css": [
      "yarn lint:css",
      "git add"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint:css": "stylelint ./styles ./src/_includes/css --config ./tools/.stylelintrc",
    "lint:js": "eslint ./src --config ./tools/.eslintrc",
    "lint": "run-s lint:*",
    "dev": "run-s clean && eleventy --serve",
    "serve": "serve ./dist",
    "build:site": "eleventy",
    "build:wallpapers": "node ./tools/screenshot-wallpapers.js",
    "build:eventcards": "node ./tools/screenshot-events.js",
    "build:sw": "workbox generateSW ./tools/workbox-config.js",
    "build": "run-s clean build:*",
    "perf": "lighthouse https://www.londoncss.dev/ --budget-path=./tools/budget.json --view",
    "cy:serve": "serve ./dist",
    "cy:run": "cypress run",
    "test": "start-server-and-test cy:serve http://localhost:5000 cy:run"
  }
}
