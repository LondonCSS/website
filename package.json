{
  "name": "londoncss-website",
  "description": "London CSS",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": "git@github.com:LondonCSS/website.git",
  "author": "Oliver Turner <oliver.turner@codedsignal.co.uk>",
  "homepage": "https://www.londoncss.dev",
  "bugs": "https://github.com/LondonCSS/website/issues",
  "keywords": [
    "London CSS",
    "website",
    "eleventy",
    "css"
  ],
  "dependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-plugin-rss": "1.1.1",
    "critical": "4.0.1",
    "cssnano": "5.0.8",
    "cssnano-preset-advanced": "5.1.4",
    "date-fns": "2.23.0",
    "eleventy-plugin-toc": "1.1.0",
    "markdown-it": "12.2.0",
    "markdown-it-anchor": "8.3.0",
    "mkdirp": "1.0.4",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.6",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.2",
    "postcss-inset": "1.0.0",
    "postcss-preset-env": "6.7.0",
    "postcss-pseudo-class-enter": "5.0.0",
    "puppeteer": "10.2.0",
    "sass": "1.41.0",
    "serve-handler": "6.1.3",
    "sharp": "0.30.5"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "serve": "12.0.1",
    "start-server-and-test": "1.14.0",
    "stylelint": "13.13.1",
    "stylelint-config-recommended": "5.0.0",
    "stylelint-selector-bem-pattern": "2.1.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.stylelintrc": "stylelint --fix"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf dist",
    "lint:css": "stylelint ./styles ./src/scss --config ./tools/.stylelintrc",
    "lint:js": "eslint ./src --config ./tools/.eslintrc",
    "lint": "run-s lint:*",
    "screenshot:wallpapers": "node ./tools/screenshot-wallpapers.js",
    "screenshot:eventcards": "node ./tools/screenshot-events.js",
    "screenshots:run": "start-test serve 8080 'run-s screenshot:*'",
    "screenshots": "run-s build:site screenshots:run",
    "build:site": "eleventy",
    "build:cp": "cp ./tools/_redirects ./dist",
    "build": "NODE_ENV=production run-s clean build:*",
    "serve": "serve -l 8080 ./dist",
    "preview": "run-s build serve",
    "dev": "run-s clean && eleventy --serve"
  }
}
