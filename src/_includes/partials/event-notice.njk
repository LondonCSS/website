{% macro notice(notice) %}
<div class="event__notice event__notice--{{ notice.level }}">
  <div class="event__notice__heading">
    <h2 class="title event__notice__title">{{notice.title}}</h2>

    {% if notice.date %}
    <span class="event__notice__date">{{ notice.date | date }}</span>
    {% endif %}
  </div>
  <div class="event__notice__content">
    {{notice.content | markdown | safe}}
  </div>
</div>
{% endmacro %}